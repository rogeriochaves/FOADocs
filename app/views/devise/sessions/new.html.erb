<div class="tela-login">
	<div class="span12">
		<div class="box-btn-login">
			<div class="btn-login">
				<div class="fechadura">
					<div class="bolinha"></div>
					<div class="trapezio"></div>
				</div>
			</div>
		</div>

		<div class="box-login">
			<div class="nuvem-login">
				<div class="nuvem-girar">
					<div class="back">
						<div class="circulo circulo-1"></div>
						<div class="circulo circulo-2"></div>
						<div class="circulo circulo-3"></div>
						<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal frm-login'}) do |f| %>
		
							<% if params[:usuario] and params[:usuario].size > 0 %>
								<%- session[:attempts] = session[:attempts] ? session[:attempts] + 1 : 1 %>
								<div class="alert alert-danger">
									<% if @captcha_invalido %>
										Captcha inválido, por favor, tente novamente
									<% else %>
						            	Usuário ou senha inválidos
						            <% end %>
						        </div>
							<% end %>

							<div class="field">
								<%= f.label :matricula, "Matricula" %>
								<%= f.email_field :matricula %>
							</div>
							<div class="field">
								<%= f.label :password, "Senha" %>
								<%= f.password_field :password %>
							</div>

							<% if session[:attempts] and session[:attempts] >= 3 %>
								<div class="field">
									<%=raw recaptcha_tags %>
								</div>
							<% end %>

							<%= f.submit "aperte enter" %>
						<% end %>
					</div>
					<div class="front">
						<div class="circulo circulo-1"></div>
						<div class="circulo circulo-2"></div>
						<div class="circulo circulo-3"></div>
					</div>
				</div>
				
				<h1 class="logo">FOADOCS</h1>
			</div>
		</div>
	</div>
</div>

<% content_for :rodape do -%>
	<div class="tela-login">
		<footer>
			<ul id="nuvens-rodape" class="unselectable" data-friction-x="0.1" data-friction-y="0.4" data-scalar-x="25" data-scalar-y="5">
				<li class="layer" data-depth="0.3">
					<div class="nuvem nuvem-3"></div>
				</li>
				<li class="layer" data-depth="0.6">
					<div class="nuvem nuvem-2"></div>
				</li>
				<li class="layer" data-depth="1">
					<div class="nuvem nuvem-1"></div>
					<div class="branco"></div>
				</li>
			</ul>
		</footer>
	</div>
<% end %>