<h1>Detalhes <%= masc_fem('mensagem', 'do', 'da') %> Mensagem</h1>

<% if notice %>
	<div class="alert-message success">
		<p id="notice"><%= notice %></p>
	</div>
<% end %>

<div class="fieldset">
	<dl>

		<dt class="label">Enviado em</dt>
		<dd>
			<pre><%= @mensagem.created_at.strftime('%d/%m/%y %H:%M') %></pre>
		</dd>
		
		<dt class="label">Nome</dt>
		<dd>
			<pre><%= @mensagem.nome %></pre>
		</dd>
		
		<dt class="label">Email</dt>
		<dd>
			<pre><%= @mensagem.email %></pre>
		</dd>
		
		<dt class="label">Telefone</dt>
		<dd>
			<pre><%= @mensagem.telefone %></pre>
		</dd>
		
		<dt class="label">Mensagem</dt>
		<dd>
			<%=simple_format @mensagem.mensagem %>
		</dd>
		
	</dl>
</div>