<%= simple_form_for(current_usuario, validate: true, url: {action: :change_password}, html: {class: 'form-horizontal'}) do |f| %>
  <%= error_messages_for current_usuario %>
  <% if @erro %>
	<div class="col-lg-12">
		<div class="row">
			<div class="alert alert-danger col-lg-6">
				<%= @erro %>
		    </div>
		</div>
	</div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :password, label: 'Senha' %>
    
    <%= f.input :password_confirmation, label: 'Confirme a Senha' %>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, value: 'Mudar senha', class: 'btn-success' %>
  </div>
<% end %>