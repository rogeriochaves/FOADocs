<%= simple_form_for([:admin, @pagina], validate: true, html: {class: 'form-horizontal'}) do |f| %>

  <%= error_messages_for @pagina %>

  <div class="form-inputs">
    <%= f.input :url %>

    <%= f.input :title %>

    <%= f.input :description, as: :text %>

    <%= f.input :metatags, label: 'Outras Metatags' %>
  </div>
  
  <div class="form-actions">
    <%= f.submit class: 'btn btn-success', value: 'Salvar' %>
  </div>
  
<% end %>