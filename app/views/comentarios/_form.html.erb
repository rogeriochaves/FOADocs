<%= simple_form_for(@comentario, validate: true, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :usuario %>
    <%= f.association :versao %>
    <%= f.input :comentario %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn-success' %>
  </div>
<% end %>
